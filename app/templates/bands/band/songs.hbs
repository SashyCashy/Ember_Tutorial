<div class="row list-wrapper">
  <div class="list-group songs">

    {{#if noSongs}}
      <div class="list-group-item empty-list">
        <div class="empty-message">
          There are no songs yet. Why don't you <a href="#" {{action "enableSongCreation"}}> create one? </a></div>
      </div>
      {{else}}
      <li class="list-group-item">
        <form {{action "createSong" on="submit"}}>
        {{input type="text" class="new-song" placeholder="New Song" value=song_name}}
        <button type="submit" class="btn btn-primary btn-sm new-song-button"> Add </button>
      </form>
      </li>
      {{#each model.songs as |song|}}
        <li class="list-group-item">
          {{song.title}}
          {{star-rating item=song rating=song.rating setAction="updateRating"}}
        </li>
      {{/each}}
    {{/if}}
  </div>
</div>
